rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 인증 확인 함수
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // 문서 소유자 확인 함수
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // registrations 컬렉션 규칙
    match /registrations/{carNumber} {
      allow read: if true;  // 모든 사용자가 조회 가능
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && isOwner(resource.data.hostID);
    }

    // requests 컬렉션 규칙
    match /requests/{requestId} {
      allow read: if isAuthenticated() && (
        isOwner(resource.data.requesterID) || 
        isOwner(resource.data.hostID)
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        isOwner(resource.data.requesterID) || 
        isOwner(resource.data.hostID)
      );
      allow delete: if isAuthenticated() && isOwner(resource.data.requesterID);
    }

    // archives 컬렉션 규칙
    match /archives/{archiveId} {
      allow read: if isAuthenticated() && (
        isOwner(resource.data.requesterID) || 
        isOwner(resource.data.hostID)
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        isOwner(resource.data.requesterID) || 
        isOwner(resource.data.hostID)
      );
      allow delete: if false;  // 아카이브는 삭제 불가
    }
  }
} 